model Post {
  id          Int     @id @default(autoincrement())
  authorId    Int
  title       String
  description String
  content     String
  published   Boolean @default(false)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@map("post")
}
